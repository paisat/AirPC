<?xml version="1.0" encoding="utf-8"?>

<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="10%p"
    android:horizontalGap="0px"
    android:verticalGap="15px"
    android:keyHeight="@dimen/key_height"
    android:color="#000000"
    android:textColor="#0000FF"
    >
	<Row>
	<Key android:codes="-49" android:keyLabel="~"  android:keyEdgeFlags="left"/>
        <Key android:codes="70" android:keyLabel="="/>
        <Key android:codes="-50" android:keyLabel="_"/>
        <Key android:codes="-51" android:keyLabel="&lt;"/>
        <Key android:codes="-52" android:keyLabel="&gt;"/>
        <Key android:codes="-53" android:keyLabel="{"/>
        <Key android:codes="-54" android:keyLabel="}"/>
        <Key android:codes="71" android:keyLabel="["/>
        <Key android:codes="72" android:keyLabel="]"/>
        <Key android:codes="-55" android:keyLabel="|" android:keyEdgeFlags="right"/>
	</Row>
	
	<Row>
	<Key android:codes="-2" android:keyLabel="2/2" 
                android:keyWidth="25%p" 
               android:keyEdgeFlags="left"/>
        <Key android:codes="-56" android:keyLabel="$"  />
        <Key android:codes="-57" android:keyLabel="^"/>
        <Key android:codes="68" android:keyLabel="`"/>
        <Key android:codes="-58" android:keyLabel="*"/>
