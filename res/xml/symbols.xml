    </Row>
    
    <Row android:rowEdgeFlags="bottom">
        <Key android:codes="-3" android:keyIcon="@drawable/special" 
                android:keyWidth="20%p" android:keyEdgeFlags="left"/>
        <Key android:codes="-4" android:keyLabel="abc" android:keyWidth="15%p"/>
        <Key android:codes="62" android:keyIcon="@drawable/space" 
                android:keyWidth="30%p" android:isRepeatable="true"/>
        <Key android:codes="56" android:keyLabel="."
                android:keyWidth="15%p"/>
        <Key android:codes="66" android:keyIcon="@drawable/enter" 
                android:keyWidth="20%p" android:keyEdgeFlags="right"/>
    </Row>
    
    
    </Keyboard>